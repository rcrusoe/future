<canvas class='connecting-dots'></canvas>

<div class="prediction">
  <%= form_for(@prediction) do |f| %>
	  <div class="field">
	    <%= f.text_area :description, autofocus: "true", rows: "3", id: "prediction"%>
	  </div>
	<% end %>
</div>

<script>
	$("#prediction").focus().val("In the future, food will ");
	$(document).on('keydown', '#prediction', function(e) {
	  if(e.keyCode == 13 && (e.metaKey || e.ctrlKey)) {
	    $(this).parents('form').submit()
	  }
	})
</script>